{% extends 'base.html.twig' %}

{% block title %}Où manger à Disneyland Paris ?{% endblock %}

{% block body %}

<h1 class="page-title">Rendez votre visite délicieusement Mmm... Magique</h1>


{% if restaurants is not empty %}
<section class="section-attraction">
    <div class="cards">
        {% for restaurant in restaurants %}
            <a href="/restaurants/{{ restaurant.slug }}" class="card" style="background-image: linear-gradient(0deg,rgba(0,0,0,0.8) 0%,rgba(0,0,0,0.0) 100%),url({% if restaurant.image %}{{ restaurant.image }}{% else %}/images/default-bg.jpg{% endif %});">
                <h3 class="text-center">{{ restaurant.name }}</h3>
            </a>
        {% endfor %}    
    </div>
</section>
{% endif %}

{% endblock %}

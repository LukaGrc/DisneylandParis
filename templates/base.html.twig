<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="/css/style.css">

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header>
            {% if (controller_name is not defined) or (controller_name != "HomeController") %}
                <section id="hero-page" style="background-image: linear-gradient(0deg,rgba(0,0,0,0.6) 0%,rgba(0,0,0,0.5) 100%),url({% if topimg is defined and topimg %}{{ topimg }}{% else %}/images/default-bg.jpg{% endif %})">
                    <div class="hero-topbar">
                        <a href="/"><img src="{{ asset('/images/logo/dlp-30.svg') }}" alt="Disneyland Paris" /></a>
                        <div class="hero-topbar-menu">
                            <ul>
                                <li><a href="/">Accueil</a></li>
                                <li><a href="/destinations">Nos parcs</a></li>
                                <li><a href="/hotels">Hôtels</a></li>
                                <li><a href="/restaurants">Restaurants</a></li>
                                <li><a href="/billetterie">Billetterie</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="divider-bottom">
                        <svg data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
                            <path d="M741,116.23C291,117.43,0,27.57,0,6V120H1200V6C1200,27.93,1186.4,119.83,741,116.23Z" class="shape-fill"></path>
                        </svg>
                    </div>
                </section>
            {% endif %}
        </header>
        <main>
            {% block body %}{% endblock %}
        </main>
    </body>
</html>

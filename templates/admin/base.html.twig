<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="/css/style.css">

        <!-- FAVICONS -->
        <link rel="apple-touch-icon" sizes="180x180" href="/images/favicons/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="/images/favicons/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="/images/favicons/favicon-16x16.png">
        <link rel="manifest" href="/images/favicons/site.webmanifest">
        <link rel="mask-icon" href="/images/favicons/safari-pinned-tab.svg" color="#0149e8">
        <link rel="shortcut icon" href="/images/favicons/favicon.ico">
        <meta name="apple-mobile-web-app-title" content="Disneyland Paris">
        <meta name="application-name" content="Disneyland Paris">
        <meta name="msapplication-TileColor" content="#0149e8">
        <meta name="msapplication-config" content="/images/favicons/browserconfig.xml">
        <meta name="theme-color" content="#ffffff">

        <!-- FONTS -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div class="admin-row">
            <div class="admin-col col-10">
                <div class="container">
                    <ul class="menu-list">
                        <li>
                            <a href="{{path('app_home')}}">
                                <div>
                                    <span>Retourner au site</span>
                                </div>
                            </a>
                        </li>
                        <li>
                            <a {% if active == "Home" %}class="active" {% endif %} href="{{path('app_admin')}}">
                                <div>
                                    <span>Accueil</span>
                                </div>
                            </a>
                        </li>
                    </ul>
                    <ul class="menu-list">
                        <li>
                            <a {% if active == "Users" %}class="active" {% endif %} href="/admin/users">
                                <div>
                                    <span>Utilisateurs</span>
                                </div>
                            </a>
                            <ul class="sub-menu">
                                <li><a {% if active == "Users" and activeSub == "Home" %}class="active" {% endif %} href="/admin/users">Afficher</a></li>
                                <li><a {% if active == "Users" and activeSub == "Search" %}class="active" {% endif %} href="/admin/users/search">Rechercher</a></li>
                                <li><a {% if active == "Users" and activeSub == "Admins" %}class="active" {% endif %} href="/admin/users/admins">Administrateurs</a></li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="menu-list">
                        <li>
                            <a {% if active == "Destinations" %}class="active" {% endif %} href="/admin/destinations">
                                <div>
                                    <span>Destinations</span>
                                </div>                       
                            </a>
                            <ul class="sub-menu">
                                <li><a {% if active == "Destinations" and activeSub == "Home" %}class="active" {% endif %} href="/admin/destinations">Afficher</a></li>
                                <li><a {% if active == "Destinations" and activeSub == "Lands" %}class="active" {% endif %} href="/admin/destinations/lands">Lands</a></li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="menu-list">
                        <li>
                            <a {% if active == "Hotels" %}class="active" {% endif %} href="/admin/hotels">
                                <div>
                                    <span>Hôtels</span>
                                </div>
                            </a>
                            <ul class="sub-menu">
                                <li><a {% if active == "Hotels" and activeSub == "Home" %}class="active" {% endif %} href="/admin/hotels">Afficher</a></li>
                                <li><a {% if active == "Hotels" and activeSub == "Add" %}class="active" {% endif %} href="/admin/hotels/add">Ajouter</a></li>
                                <li><a {% if active == "Hotels" and activeSub == "Bookings" %}class="active" {% endif %} href="/admin/hotels/bookings">Réservations</a></li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="menu-list">
                        <li>
                            <a {% if active == "Attractions" %}class="active" {% endif %} href="/admin/attractions">
                                <div>
                                    <span>Attractions</span>
                                </div>                            
                            </a>
                            <ul class="sub-menu">
                                <li><a {% if active == "Attractions" and activeSub == "Home" %}class="active" {% endif %} href="/admin/attractions">Afficher</a></li>
                                <li><a {% if active == "Attractions" and activeSub == "Categories" %}class="active" {% endif %} href="/admin/attractions/categories">Catégories</a></li>
                                <li><a {% if active == "Attractions" and activeSub == "Add" %}class="active" {% endif %} href="/admin/attractions/add">Ajouter</a></li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="menu-list">
                        <li>
                            <a {% if active == "Restaurants" %}class="active" {% endif %} href="/admin/restaurants">
                                <div>
                                    <span>Restaurants</span>
                                </div>
                            </a>
                            <ul class="sub-menu">
                                <li><a {% if active == "Restaurants" and activeSub == "Home" %}class="active" {% endif %} href="/admin/restaurants">Afficher</a></li>
                                <li><a {% if active == "Restaurants" and activeSub == "Add" %}class="active" {% endif %} href="/admin/restaurants/add">Ajouter</a></li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="menu-list">
                        <li>
                            <a {% if active == "Ticketing" %}class="active" {% endif %} href="/admin/ticketing">
                                <div>
                                    <span>Billeterie</span>
                                </div>
                            </a>
                            <ul class="sub-menu">
                                <li><a {% if active == "Ticketing" and activeSub == "Types" %}class="active" {% endif %} href="/admin/ticketing/types">Types de billets</a></li>
                                <li><a {% if active == "Ticketing" and activeSub == "Invoices" %}class="active" {% endif %} href="/admin/ticketing/invoices">Achats</a></li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="menu-list">
                        <li>
                            <a {% if active == "Stats" %}class="active" {% endif %} href="/admin/stats">
                                <div>
                                    <span>Statistiques</span>
                                </div>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="admin-col col-90">
                {% block body %}{% endblock %}
            </div>
        </div>


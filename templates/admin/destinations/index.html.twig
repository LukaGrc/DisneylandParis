{% extends 'admin/base.html.twig' %}

{% block title %}Destinations | Panel Admin - Disneyland Paris{% endblock %}

{% block body %}
    <h1>Destinations</h1>
    <p></p>

    <table class=\"table table-striped\">
        <thead>
            <tr>
                <th>Id</th>
                <th>Icône</th>
                <th>Nom</th>
                <th>Ouverture</th>
                <th>Fermeture</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for destination in destinations %}
            <tr>
                <td>{{ destination.id }}</td>
                <td><img src="{{ asset(destination.icon) }}" alt="{{ destination.name }}"></td>
                <td>{{ destination.name }}</td>
                <td>{{ destination.hoursopening|date('H:i') }}</td>
                <td>{{ destination.hoursclosing|date('H:i') }}</td>
                <td>
                    <a href="" class="warn-btn">Voir/Modifier</a>
                    <a href="" class="danger-btn">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan=\"5\">Aucune destination trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}{{ land.name }} dans le {{ destination.name }}{% endblock %}

{% block body %}

<div class="page-title">
    <h1>{{ land.name }} dans le {{ destination.name }}</h1>
    <p>{{ land.description }}</p>
</div>

{% if attractions is not empty %}
    <section class="section-attraction">
        <div class="section-title">
            <img src="{{ asset('/images/icons/destinations.svg') }}" alt="Nos destinations - Disneyland Paris" />
            <h2>Il est temps de s'amuser</h2>
        </div>

        <div class="cards">
            {% for attraction in attractions %}
                <a href ="/attractions/{{ destination.slug }}/{{ attraction.slug }}" class="card" style="background-image: linear-gradient(0deg,rgba(0,0,0,0.8) 0%,rgba(0,0,0,0.0) 100%),url({% if attraction.image %}{{ attraction.image }}{% else %}/images/default-bg.jpg{% endif %});">
                    <h3 class="text-center">{{ attraction.name }}</h3>
                </a>
            {% endfor %}    
        </div>
    </section>
{% endif %}

{% if restaurants is not empty %}
<section class="section-restaurant">
    <div class="section-title">
        <img src="{{ asset('/images/icons/destinations.svg') }}" alt="Nos destinations - Disneyland Paris" />
        <h2>Un petit creux ? On a ce qu'il faut !</h2>
    </div>

    <div class="cards">
        {% for restaurant in restaurants %}
            <a href ="/restaurants/{{ restaurant.slug }}" class="card" style="background-image: linear-gradient(0deg,rgba(0,0,0,0.8) 0%,rgba(0,0,0,0.0) 100%),url({% if restaurant.image is defined %}{{ restaurant.image }}{% else %}/images/default-bg.jpg{% endif %});">
                <h3 class="text-center">{{ restaurant.name }}</h3>
            </a>
        {% endfor %}    
    </div>
</section>
{% endif %}

{% endblock %}
